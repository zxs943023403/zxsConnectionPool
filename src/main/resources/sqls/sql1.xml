<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<resultMap id="authorResult" type="Author">
	  <id property="id" column="author_id"/>
	  <result property="username" column="author_username"/>
	  <result property="password" column="author_password"/>
	  <result property="email" column="author_email"/>
	  <result property="bio" column="author_bio"/>
	</resultMap>
	
	<sql id="select*" >
		select * from ${table}
	</sql>
	
	<mapper namespace="ConnectionPool.ConnectionPool.test.TestMapper">
	    <select id="getUser" parameterType="int" 
	        resultType="ConnectionPool.ConnectionPool.test.vo">
	        <include refid="select*" ><property name="table" value="tname" /></include>
	        as wh_employee_info
	        <if test="" >
		         where id=#{id}
	        </if>
	    </select>
	    
	    <select id="getUser1" parameterType="int" 
	        resultType="ConnectionPool.ConnectionPool.test.vo">
	        <include refid="select*" ><property name="table" value="tname" /></include>
	        <if test="cGuid > 10" >
		         where cGuid=#{cGuid}
	        </if>
	    </select>
	    
	    <select id="getUser2" parameterType="int" 
	        resultType="ConnectionPool.ConnectionPool.test.vo">
	        <include refid="select*" ><property name="table" value="tname" /></include>
		         where cGuid=#{cGuid}
	        <choose>
	        	<when test="cPwdType == 1" >
	        		and cPwdType = 1
	        	</when>
	        	<when test="cUserType == udp" >
	        		and cUserType = 'udp'
	        	</when>
	        	<otherwise>
	        		and 1=1
	        	</otherwise>
	        </choose>
	    </select>
	    
	    <select id="getUser3" parameterType="int" 
	        resultType="ConnectionPool.ConnectionPool.test.vo">
	        <include refid="select*" ><property name="table" value="tname" /></include>
		    <where >
		    	<if test="cGuid != null" >
		    		and cGuid=#{cGuid}
		    	</if>
		    	<if test="cPwdType == 1" >
		    		and cPwdType = 1
		    	</if>
		    	<if test="cUserType == udp" >
		    		and cUserType = 'udp'
		    	</if>
		    </where>
	    </select>
	    
	</mapper>
</configuration>